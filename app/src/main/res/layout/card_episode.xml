<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episode_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    custom:cardElevation="0dp"
    custom:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/episode_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/dark_accent"

            android:gravity="center_vertical"
            android:padding="10dp"

            android:singleLine="false"

            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            tools:text="001: This is Gonna be Terrible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/dark_card"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/episode_length"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/text_color_primary"
                    tools:text="Duration: 1:11:01" />

                <TextView
                    android:id="@+id/episode_date"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_primary"
                    tools:text="Date: 3/10/2014" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>